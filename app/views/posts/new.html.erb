<%= form_for @post, html: { multipart: true } do |f| %>
	
	<%= f.label :picture %>
	<%= f.file_field :picture %>

	<%= f.label :description %> 
	<%= f.text_area :description %>

	<%= f.label :tag_names, 'Tags' %>
	<%= f.text_field :tag_names, data: { role: 'tagsinput' } %>
	
	<%= f.button "Upload", action: "create", class: "btn btn-success"%>

<% end %>